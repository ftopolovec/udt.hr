{% extends '::login_base.html.twig' %}

{% block body  %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h2>Prijava korisnika</h2>
    <form action="{{ path('login_check') }}" method="post" class="form-horizontal">
        <fieldset>
            <div class="input-prepend" title="Username">
                <span class="add-on"><i class="halflings-icon user"></i></span>
                <input class="input-large span10" name="_username" id="username" type="text" placeholder="unesite korisničko ime"/>
            </div>
            <div class="clearfix"></div>

            <div class="input-prepend" title="Password">
                <span class="add-on"><i class="halflings-icon lock"></i></span>
                <input class="input-large span10" name="_password" id="password" type="password" placeholder="unesite lozinku"/>
            </div>
            <div class="clearfix"></div>
            <div class="button-login">
                <button type="submit" class="btn btn-primary">Prijavi</button>
            </div>
            <div class="clearfix"></div>
        </fieldset>
    </form>
{% endblock %}